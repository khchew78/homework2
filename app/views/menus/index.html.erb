
<h1 style="color: blue">Menu</h1>

<div class="col-lg-9">
  <table>
    <thead>
      <tr>
        <th style="width:35%; font-size:20px">Image</th>
        <th style="width:35%; font-size:20px">Food name</th>
        <th style="width:35%; font-size:20px">Price</th>
        <th style="width:15%"></th>
        <th style="width:15%"></th>
      </tr>
    </thead>

    <tbody>
      <% @menus.each do |menu| %>
        <tr>
          <td><%#= image_tag menu.image.variant(resize: "100x100") %></td>
          <td style="font-size:20px"><%= menu.food_name %></td>
          <td style="font-size:20px"><%= menu.price %></td>
          <td style="font-size:20px"><%= link_to 'Detail', menu %></td>
          <td style="font-size:20px"><%= link_to 'Delete', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-right fixed-bottom">
      <a href="<%= new_menu_path %>" class="btn btn-info" role="button" style="border: none;background-color: white; ">
        <span class="fa fa-plus-circle" style="font-size:60px;color:blue;"></span>
      </button>
    </div>